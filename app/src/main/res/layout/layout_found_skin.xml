<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/skinPaddingBottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/labelSkinPaddingEnd"
        android:paddingStart="@dimen/labelPaddingStart"
        android:textSize="@dimen/labelTextSize"
        android:text="@string/skin_color"
        android:textColor="@android:color/black" />

    <View
        android:id="@+id/found_skin_white"
        android:layout_width="@dimen/colorChoiceWidth"
        android:layout_height="@dimen/colorChoiceHeight"
        android:layout_marginEnd="@dimen/colorChoiceSpacing"
        android:layout_marginStart="@dimen/colorChoiceMarginStart" />

    <View
        android:id="@+id/found_skin_wheat"
        android:layout_width="@dimen/colorChoiceWidth"
        android:layout_height="@dimen/colorChoiceHeight"
        android:layout_marginEnd="@dimen/colorChoiceSpacing"
        android:layout_marginStart="@dimen/colorChoiceMarginStart" />

    <View
        android:id="@+id/found_skin_dark"
        android:layout_width="@dimen/colorChoiceWidth"
        android:layout_height="@dimen/colorChoiceHeight" />

</LinearLayout>
